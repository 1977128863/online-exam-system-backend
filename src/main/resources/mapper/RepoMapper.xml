<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.org.alan.exam.mapper.RepoMapper">
    <delete id="deleteByUserIds">
        delete from t_repo where user_id in
        <foreach collection="userIds" item="userId" open="(" close=")" separator=",">
            #{userId}
        </foreach>
    </delete>

    <select id="pagingRepo" resultType="RepoVO">
        select r.gradeId,u.real_name,r.title,r.create_time from t_repo r join t_user u on r.user_id = u.gradeId
        <where>
            <if test='title != null and title != ""'>
                r.title like #{title}
            </if>
            <if test='userId > 0'>
                r.gradeId = #{userId}
            </if>
        </where>
    </select>
</mapper>
