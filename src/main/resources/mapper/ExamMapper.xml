<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.org.alan.exam.mapper.ExamMapper">
    <delete id="delExam">
        delete from t_exam
        WHERE id IN
        <foreach item="examId" collection="examIds" open="(" separator="," close=")">
            #{examId}
        </foreach>
    </delete>
    <delete id="delExamGrade">
        delete from t_exam_grade
        WHERE exam_id IN
        <foreach item="examId" collection="examIds" open="(" separator="," close=")">
            #{examId}
        </foreach>
    </delete>
    <delete id="delExamRepo">
        delete from t_exam_repo
        WHERE exam_id IN
        <foreach item="examId" collection="examIds" open="(" separator="," close=")">
            #{examId}
        </foreach>
    </delete>
    <delete id="delExamQue">
        delete from t_exam_question
        WHERE exam_id IN
        <foreach item="examId" collection="examIds" open="(" separator="," close=")">
            #{examId}
        </foreach>
    </delete>
    <delete id="deleteByUserIds">
        delete from t_exam where user_id in
        <foreach collection="userIds" item="userId" open="(" close=")" separator=",">
            #{userId}
        </foreach>
    </delete>

    <select id="selectMarkedList" resultType="cn.org.alan.exam.model.entity.Exam">
        select id as examId, title as examTitle, case when saq_count > 0 then 1 else 0 end as neededMark
        from t_exam
        where user_id = #{userId}
    </select>
</mapper>